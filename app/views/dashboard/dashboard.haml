= link_to t('events.form.button.new'), new_event_path


#left_column
  #invites
    %h2= t('events.invites.title')
    - unless @pending_invites.empty?
      - @pending_invites.each do |invite|
        = render invite
        = link_to t('events.invites.see_all'), "#"

  #my_events
    %h2= t('events.my_events.title')
    = render @my_events
    = link_to t('events.my_events.see_all'), events_path

#right_column
  #public_events
    %h2= t('events.public.title')
    = t('events.public.near_you', :current_city => @current_city)
    = render @public_events
    = link_to t('events.public.see_all'), public_events_path
