- manager = local_assigns.fetch(:manager, false)

- if rsvp.positive?
  = disabled_confirm_button(rsvp.attendance, manager)
- else
  = confirm_button(rsvp.attendance, manager)

- if rsvp.negative?
  = disabled_decline_button(rsvp.attendance, manager)
- else
  = decline_button(rsvp.attendance, manager)
