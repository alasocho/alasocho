- unless attendance.try(:confirmed?)
  = link_to (attendance.event.slots_available? ? t('event.confirm.slots_available') : t("event.confirm.no_slots_available")), event_attendance_path(attendance.event), :method => :post
- unless attendance.try(:declined?)
  = link_to t('event.decline'), event_attendance_path(attendance.event), :method => :delete
