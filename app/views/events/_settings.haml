.form_field
  = f.check_box :public
  = f.label :public

.form_field
  = f.check_box :allow_invites, :disabled => f.object.public?
  = f.label :allow_invites, t("event.allow_invites")

.form_field
  = label_tag :no_limit, t("event.form.invite.no_limit")
  %input{type: :checkbox, id: :no_limit}

.form_field.attendee_quota_field
  = f.label :attendee_quota
  = f.number_field :attendee_quota, :size => 3, :class => "attendee_quota"
  = t("event.form.invite.after_attendee_quota")
