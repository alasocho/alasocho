- with_options :scope => [:events, :form, :placeholders] do |placeholder_i18n|
  .form_field
    = f.label :name
    = f.text_field :name, placeholder: placeholder_i18n.t(:name)

  .form_field
    = f.label :description
    = f.text_area :description, placeholder: placeholder_i18n.t(:description)

  .double_feature
    .form_field
      = f.label :start_at
      = f.text_field :start_at, type: "datetime", placeholder: placeholder_i18n.t(:start_at)

    .form_field
      = f.label :end_at
      = f.text_field :end_at, type: "datetime", placeholder: placeholder_i18n.t(:end_at)

  .form_field
    = f.label :location
    = f.text_field :location, placeholder: placeholder_i18n.t(:location)

  .form_field
    = f.label :city
    = f.text_field :city, placeholder: placeholder_i18n.t(:city)

  .submit_button
    = f.submit
